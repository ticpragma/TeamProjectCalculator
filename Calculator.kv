#:kivy 2.3.0
<Calculator>:
    orientation: 'horizontal'

    BoxLayout
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 3)

            Button:
                font_size: '60sp'
                text: 'тут результат'

        BoxLayout:
            size_hint: (1, 0.5)
            orientation: 'horizontal'

            Button:
                font_size: '20sp'
                text: 'MC'

            Button:
                font_size: '20sp'
                text: 'MR'

            Button:
                font_size: '20sp'
                text: 'M+'

            Button:
                font_size: '20sp'
                text: 'M-'

            Button:
                font_size: '20sp'
                text: 'MS'


        BoxLayout:
            orientation: 'horizontal'

            Button:
                font_size: '20sp'
                text: '%'

            Button:
                font_size: '20sp'
                text: 'CE'

            Button:
                font_size: '20sp'
                text: 'C'

            Button:
                font_size: '20sp'
                text: 'del'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                font_size: '20sp'
                text: '1/X'

            Button:
                font_size: '20sp'
                text: 'х²'

            Button:
                font_size: '20sp'
                text: '√'

            Button:
                font_size: '20sp'
                text: '÷'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                font_size: '20sp'
                text: '7'

            Button:
                font_size: '20sp'
                text: '8'

            Button:
                font_size: '20sp'
                text: '9'

            Button:
                font_size: '20sp'
                text: '×'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                font_size: '20sp'
                text: '4'

            Button:
                font_size: '20sp'
                text: '5'

            Button:
                font_size: '20sp'
                text: '6'

            Button:
                font_size: '20sp'
                text: '-'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                font_size: '20sp'
                text: '1'

            Button:
                font_size: '20sp'
                text: '2'

            Button:
                font_size: '20sp'
                text: '3'

            Button:
                font_size: '20sp'
                text: '+'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                font_size: '20sp'
                text: '+/-'

            Button:
                font_size: '20sp'
                text: '0'

            Button:
                font_size: '20sp'
                text: ','

            Button:
                font_size: '20sp'
                text: '='


    BoxLayout
        orientation: 'vertical'
        size_hint: (0.5, 1)

        BoxLayout
            orientation: 'horizontal'
            size_hint: (1, 0.1)


            Button:
                text: 'История'
                padding: (5, 5)
                size_hint: (0.1, 0.4)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press:
                    memory.opacity = 0
                    history_wrapper.opacity = 1

            Button:
                text: 'Память'
                padding: (5, 5)
                size_hint: (0.1, 0.4)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press:
                    memory.opacity = 1
                    history_wrapper.opacity = 0



        FloatLayout:

            BoxLayout
                id: history_wrapper
                orientation: 'vertical'
                pos_hint: {'right': 1, 'y': 0}

                ScrollView:

                    do_scroll_x: False
                    do_scroll_y: True

                    BoxLayout:
                        id: history
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height

            BoxLayout:
                pos_hint: {'right': 1, 'top': 1}
                id: memory
                orientation: "horizontal"

                Button:
                    size_hint: (0.8, None)
                    text: '2'
                    on_press: root.test_func()


